@using LCFila.Web.Models
@using LCFila.Web.Models.Empresa
@model List<EmpresaLoginViewModel>

@{
    ViewData["Title"] = "Index";
}

<!-- Content Wrapper. Contains page content -->
<div class="content">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Administração do Sistema</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Index</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
    
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lista de Empresas (Clientes)</h3>
    
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="example" class="table  table-striped ">
                    <thead>
                        <tr>
                            <th>Nome da empresa</th>
                            <th>Status</th>
                            <th>Ativar/Desativar</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.NomeEmpresa </td>
                            @if (@item.Ativo)
                            {
                                <td> Ativa</td>

                            }
                            else
                            {
                                <td> Desativada </td>
                            }
                            @if (@item.Ativo)
                            {
                                <td> <a class="btn btn-outline-danger btn-sm" asp-area="" asp-controller="SysAdmin" asp-action="DesativarEmpresa" asp-route-id="@item.Id" data-id="@item.Id"> Desativar</a></td>

                            }
                            else
                            {
                                <td>  <a  class="btn btn-outline-primary btn-sm" asp-area="" asp-controller="SysAdmin" asp-action="AtivarEmpresa" asp-route-id="@item.Id" data-id="@item.Id"> Ativar </a></td>
                            }
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" asp-area="" asp-controller="SysAdmin" asp-action="Details" asp-route-id="@item.Id" data-id="@item.Id">
                                    <i class="fas fa-folder">
                                    </i>
                                    Detalhes
                                </a>
                                <a class="btn btn-info btn-sm" asp-area="" asp-controller="SysAdmin" asp-action="Edit" asp-route-id="@item.Id" data-id="@item.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Alterar
                                </a>
                                <a class="btn btn-danger btn-sm" asp-area="" asp-controller="SysAdmin" asp-action="Delete" asp-route-id="@item.Id" data-id="@item.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Remover
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a class="btn btn-success" asp-action="Create">Inserir</a>
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
         $("#example").DataTable();
        });
    </script>
}
