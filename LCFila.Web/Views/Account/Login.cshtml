@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sua Vez | Log in</title>
