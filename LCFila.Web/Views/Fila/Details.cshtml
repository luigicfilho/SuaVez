@model List<LCFila.ViewModels.PessoaViewModel>
@{
    var teste = DateTime.Now;
}
<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            @if (ViewBag.info != null)
            {
                <div class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h6><i class="icon fas fa-check"></i>  @ViewBag.info</h6>
                </div>
            }
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Fila</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Fila</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content text-center col-xxl-9 col-xl-9 col-md-12 col-sm-12 col-md-12  m-auto">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    @if (ViewBag.statusfila == "Finalizada")
                    {
                        <a asp-area="" asp-controller="Fila" asp-action="Create" asp-route-id="@ViewBag.idFila" data-id="@ViewBag.idFila" class="btn btn-primary disabled">Adicionar Cliente</a>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Fila" asp-action="Create" asp-route-id="@ViewBag.idFila" data-id="@ViewBag.idFila" class="btn btn-primary">Adicionar Cliente</a>
                    }


                </h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">

                            </th>
                            <th style="width: 20%">
                                Cliente
                            </th>
                            <th>

                            </th>
                            <th>
                                Posição
                            </th>
                            <th style="width: 8%" class="text-center">

                            </th>
                            <th style="width: 50%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(p => p.Posicao))
                        {
                            @if (item.Ativo == true && item.Status.ToString() == LCFila.Web.Models.PessoaStatusViewModel.Chamado.ToString())
                            {
                                <tr>
                                    <td>
                                    </td>
                                    <td>
                                        <a>
                                            @item.Nome
                                        </a>
                                        <br>
                                        <small>
                                            @item.Celular
                                        </small>
                                    </td>
                                    <td>
                                    </td>
                                    <td class="project_progress">
                                        Chamando...
                                    </td>
                                    <td class="project-state">
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Cliente" asp-action="Details" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="far fa-id-badge"></i>
                                            Detalhes
                                        </a>
                                        <a class="btn btn-info btn-sm" asp-area="" asp-controller="Cliente" asp-action="Attend" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="fas fa-check"></i>
                                            Atendido
                                        </a>
                                        <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Cliente" asp-action="Skip" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="fas fa-history"></i>
                                            Pular Vez
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Cliente" asp-action="Remove" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="fas fa-trash"></i>
                                            Remover
                                        </a>
                                    </td>
                                </tr>
                            }
                            else if (item.Ativo == true && item.Status.ToString() == LCFila.Web.Models.PessoaStatusViewModel.Esperando.ToString())
                            {
                                <tr>
                                    <td>
                                    </td>
                                    <td>
                                        <a>
                                            @item.Nome
                                        </a>
                                        <br>
                                        <small>
                                            @item.Celular
                                        </small>
                                    </td>
                                    <td>
                                    </td>
                                    <td class="project_progress">
                                        @item.Posicao
                                    </td>
                                    <td class="project-state">
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Cliente" asp-action="Details" asp-route-id="@item.Id" data-id="@item.Id">
                                            <i class="far fa-id-badge"></i>
                                            Detalhes
                                        </a>
                                        <a class="btn btn-dark btn-sm" asp-area="" asp-controller="Cliente" asp-action="Call" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="fas fa-bolt"></i>
                                            Chamar
                                        </a>
                                        @*<a class="btn btn-info btn-sm" asp-area="" asp-controller="Cliente" asp-action="Attend" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="fas fa-check"></i>
                                            Atendido
                                        </a>*@
                                        <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="Cliente" asp-action="Skip" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="fas fa-history"></i>
                                            Pular Vez
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Cliente" asp-action="Remove" asp-route-id="@item.Id" asp-route-filaid="@ViewBag.idFila" data-id="@item.Id">
                                            <i class="fas fa-trash"></i>
                                            Remover
                                        </a>
                                    </td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>

</div> 